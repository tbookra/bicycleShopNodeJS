<div class="card m-3" style="width: 18rem">
  <div class="card-body">
    <h6 class="card-title"><%=review.title%></h5>
    <hr />
    <small class="card-text"><%=review.description%></small>
    <hr />
    <span class="card-text">
     
      <% if(review.rating > "0") { %>
        Rating:
       <% for(let i=0; i < parseInt(review.rating); i++) { %>
           <span class="card-text"> <i class="fas fa-star"></i></span>
         <% } %> 
           
      <% } else { %> 
            <small class="card-text">There is no rating for this review</small>
      <% } %>
    </span>
  </div>
</div>
